/* 获取微信登录 Code 测试页面样式 */

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  color: #fff;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.tip {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.clear-btn {
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: normal;
}

.code-box {
  background-color: #f8f9fa;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border: 2rpx dashed #dee2e6;
  min-height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-text {
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
  text-align: center;
  font-family: 'Courier New', monospace;
}

.code-placeholder {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.button-group button {
  flex: 1;
  border-radius: 10rpx;
}

.history-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.history-item {
  background-color: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #667eea;
  position: relative;
}

.history-item:active {
  background-color: #e9ecef;
}

.history-time {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.history-code {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
  font-family: 'Courier New', monospace;
  margin-bottom: 10rpx;
}

.copy-hint {
  font-size: 22rpx;
  color: #667eea;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  padding-left: 20rpx;
  position: relative;
}

.tip-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #667eea;
  font-weight: bold;
}

